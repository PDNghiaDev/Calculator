<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>
    
    <style name="TvFomula">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:gravity">right</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/text_fomula_landscape</item>
    </style>

    <style name="TvResult">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:gravity">right</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/text_result_landscape</item>
    </style>

    <style name="ButtonLeftSide">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_weight">0.33</item>
        <item name="android:background">@drawable/btn_left_side</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:onClick">onButtonClick</item>
    </style>

    <style name="ButtonRightSide">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/btn_right_side</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:onClick">onButtonClick</item>
    </style>

</resources>
